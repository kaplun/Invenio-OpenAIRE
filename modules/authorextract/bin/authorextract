import sys

from invenio.authorextract_cli import get_cli_options
from invenio.authorextract_cli import main as cli_main
from invenio.authorextract_daemon import main as daemon_main

if __name__ == '__main__':
    args = get_cli_options()
    if args.fulltext:
        cli_main(args)
    else:
        daemon_main()
